        <button type="submit" class="btn btn-primary m-1 pb-2 col-sm-7 col-lg-3">Search</button>
        <button type="reset" class="btn btn-danger m-1 col-sm-7 col-lg-3">Reset Form</button>
      </div>
  </form>

  <hr>

  <div class="p-2">
    <h2 class="mb-3">Can't find what you're looking for?</h2>
    <div class="col-sm-12 col-md-6">
      <a href="/createEvent" type="button" class="btn btn-primary">Create Your Own Experience!</a>
    </div>
  </div>

  <hr id="results">

</div>


<script id="events-template" type="text/x-handlebars-template">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <a href="/events/\{{id}}">
        <h5 class="card-title">\{{event_name}}</h5>
      </a>
      <h6 class="card-subtitle mb-2 text-muted">\{{point_of_interest}}</h6>
      <h6 class="card-subtitle mb-2 text-muted">\{{date_time}}</h6>
      <p class="card-text">\{{description}}
    </div>
  </div>
</script>


<script id="noevents-template" type="text/x-handlebars-template">
  <div class="container">
    <h4>No events found</h4>
  </div>
</script>

<div id="results">
</div>


