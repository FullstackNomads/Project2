<h1>Meet New People</h1>
<div class="container">

  <form class="row gy-2 mb-4 gx-3 align-items-center" id="search-profile">
    <div class="col-lg-12">
      <div class="form-group">
        <label>Location:</label>
        <input type="text" class="form-control" id="search_input" placeholder="Type city..." />
      </div>

    </div>

    <div class="form-group">
      <label for="city"> City: </label>
      <input class="form-control" type="text" id="city" disabled placeholder="Please fill in location" />
    </div>

    <div class="mb-3">
      <label for="country"> Country: </label>
      <input class="form-control" type="text" id="country" disabled placeholder="Please fill in location" />
    </div>


    <div class="mb-3">
      <label class="form-label" for="filterInterests">Filter interests</label>
      <div class="card p-2" id="filterInterests">
        <div class="form-check">
          <input class="form-check-input interest" type="checkbox" value="1" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault"> Adventure </label>
        </div>
        <div class="form-check">
          <input class="form-check-input interest" type="checkbox" value="2" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault"> Sports </label>
        </div>
        <div class="form-check">
          <input class="form-check-input interest" type="checkbox" value="3" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault"> Food </label>
        </div>
        <div class="form-check">
          <input class="form-check-input interest" type="checkbox" value="4" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault"> Arts and Museums </label>
        </div>
        <div class="form-check">
          <input class="form-check-input interest" type="checkbox" value="5" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault"> History </label>
        </div>
        <div class="form-check">
          <input class="form-check-input interest" type="checkbox" value="6" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault"> Nightlife </label>
        </div>
        <div class="form-check">
          <input class="form-check-input interest" type="checkbox" value="7" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault"> Wellness </label>
        </div>
      </div>
    </div>

    <div class="col-12">
      <label for="autoSizingInput">Gender</label>

      <select class="form-select" id="gender">
        <option selected value> Select an option</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
        <option value="other">Other</option>
      </select>
    </div>

    <div class="col-sm-12 col-md-4 col-lg-3">
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
    <div class="col-sm-12 col-md-4 col-lg-3">
      <button type="reset" class="btn btn-danger">Reset Form</button>
    </div>

  </form>

  <hr>
  <br>
  <script id="users-template" type="text/x-handlebars-template">
  <div class="col">
    <div class="card shadow-sm p-4">

      <div class="card-body">
          <a href="/user/\{{id}}"><h5 class="card-title">\{{first_name}} \{{last_name}}</h5></a>
          <h6 class="card-subtitle mb-2 text-muted">\{{age}} years old</h6>
          <h6 class="card-subtitle mb-2 text-muted">\{{gender}}</h6>
          <h6 class="card-subtitle mb-2 text-muted">From \{{city_name}}, \{{country_name}}</h6>
          <h6 class="card-subtitle mb-2 text-muted">\{{interest}}</h6>
          <p class="card-text">\{{bio}}.</p>
      </div>
    </div>
  </div>
</script>


  <script id="nousers-template" type="text/x-handlebars-template">
  <div class="container">
    <h4>No users found</h4>
  </div>
</script>


  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3" id="results">
  </div>


  <script src="/js/searchUsers.js"></script>