<div class="row">
  <div class="col-12 text-center">
    <h1 class="display-5"> Meet New People</h1>
  </div>
</div>


<div class="container my-5">
  <div class="card shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-md-10 mx-auto">

          <form class="row gy-2 mb-4 gx-3 align-items-center" id="search-profile">
            <div class="col-lg-12">
              <div class="form-group">
                <label>Location:</label>
                <input type="text" class="form-control" id="search_input" placeholder="Enter a city" />
              </div>


              <div class="row">
                <div class='col-md-6'>
                  <div class="mb-3">
                    {{!-- <label for="city"> City: </label> --}}
                    <input class="form-control" type="text" id="city" disabled required placeholder="City" />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class="mb-3">
                    {{!-- <label for="country"> Country: </label> --}}
                    <input class="form-control" type="text" id="country" disabled required placeholder="Country" />
                  </div>
                </div>
              </div>


              <div class="col-12">
                <label for="autoSizingInput">Interests</label>

                <select class="form-select" id="interests" multiple>
                  <option value="1">Adventure</option>
                  <option value="2">Sports</option>
                  <option value="3">Food and Drinks</option>
                  <option value="4">Arts and Museums</option>
                  <option value="5">History</option>
                  <option value="6">Nightlife</option>
                  <option value="7">Wellness</option>
                </select>
              </div>

              <div class="col-12">
                <label for="autoSizingInput">Gender</label>

                <select class="form-select" id="gender">
                  <option disabled selected value> Select an option</option>
                  <option value="male">Male</option>
                  <option value="female">Female</option>
                  <option value="other">Other</option>

                </select>
              </div>

              <div class="col-md-12 text-center my-3">
                <button type="submit" class="btn btn-primary">Search</button>
              </div>
          </form>

        </div>
      </div>
    </div>
  </div>

</div>
</div>




