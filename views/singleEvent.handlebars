<h1>{{event_name}}</h1>


<div class="container">
  <div class="row">
    <div class="col">
     
      Name: <a href="/user/{{creator_id}}">{{creator_id}}</a>
    </div>
    <div class="col">

      <div class="row">
        <div class="col">
          Name: {{event_name}}
        </div>
      </div>
      <div class="row">
        <div class="col">
          Date: {{date_time}}
        </div>
      </div>
      <div class="row">
        <div class="col">
          Location:
          {{street_number}}
          {{street_name}}
          {{unit_number}}
          {{city_name}}
          {{state_province}}
          {{postal_code}}
          {{country}}
        </div>
      </div>
      <div class="row">
        <div class="col">
          Interest: {{interest_id}}
        </div>
      </div>
      <div class="row">
        <div class="col">
          Description: {{description}}
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Join Event!</button>

    </div>
  </div>