<div class="row">

  <div class="col-auto">
    <h2>Create an event!</h2>
  </div>
</div>


<div class="row mt-4">
  <div class="col-md-6">
    <form id="create-event">

      <div class="mb-3">
        <label for="event-name" class="form-label"> Name of Experience: </label>
        <input class="form-control" id="event-name">
      </div>

      <div class="mb-3">
        <label for="date" class="form-label"> Date </label>
        <input type="date" class="form-control" id="date">
      </div>

      
      <div class="row">
        <div class="col-lg-12">
        <div class="form-group">
          <label>Location:</label>
          <input type="text" class="form-control" id="search_input" placeholder="Type address..." />
        </div>
        
     </div>

      <div class="form-group">
        <label for="city"> City: </label>
        <input class="form-control" type="text" id="city" disabled required placeholder="Please fill in location" />
      </div>

      <div class="mb-3">
        <label for="country"> Country: </label>
        <input class="form-control" type="text" id="country" disabled required placeholder="Please fill in location" />
      </div>

      <div class="form-group mb-3">
        <label for="description">Description</label>
        <textarea class="form-control" id="description"></textarea>
      </div>

      <div class="mb-3">
        <label for="interest" class="form-label">Select Interest:</label>
        <select class="form-select" id="interest" required>
          <option value="1"> Adventure </option>
          <option value="2"> Sports </option>
          <option value="3"> Food </option>
          <option value="4"> Arts and Museums </option>
          <option value="5"> History </option>
          <option value="6"> Nightlife </option>
          <option value="7"> Wellness </option>
        </select>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>


  </div>

  <script src="/js/createEvent.js"></script>