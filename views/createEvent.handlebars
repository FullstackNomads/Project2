<div class="container">
  <div class="card shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-md-10 mx-auto">
          <div id="second">
            <div class="myform form ">
              <div class="logo mb-3 mt-4">
                <div class="col-md-12 text-center">
                  <h1>Create An Event</h1>
                </div>
              </div>
              <form class="signup-form" name="registration" id="create-event">
                <div class="mb-3">
                  <label for="event-name" class="form-label"> Name of Experience: </label>
                  <input class="form-control" id="event-name" required>
                </div>
                <div class="mb-3">
                  <label for="date" class="form-label"> Date </label>
                  <input type="date" class="form-control" id="date" required>
                </div>
                <div class="form-group">
                  <label>Location:</label>
                  <input type="text" class="form-control" id="search_input" placeholder="Begin typing a location"
                    required />
                </div>
                <div class="row">
                  <div class='col-md-6'>
                    <div class="mb-3">
                      <input class="form-control" type="text" id="city" disabled required placeholder="City" />
                    </div>
                  </div>
                  <div class='col-md-6'>
                    <div class="mb-3">
                      <input class="form-control" type="text" id="country" disabled required placeholder="Country" />
                    </div>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="interest" class="form-label">Select Interest:</label>
                  <select class="form-select" id="interest" required>
                    <option value="1"> Adventure </option>
                    <option value="2"> Sports </option>
                    <option value="3"> Food </option>
                    <option value="4"> Arts and Museums </option>
                    <option value="5"> History </option>
                    <option value="6"> Nightlife </option>
                    <option value="7"> Wellness </option>
                  </select>
                </div>
                <div class="form-group mb-3">
                  <label for="description">Description</label>
                  <textarea class="form-control" id="description"></textarea>
                </div>
                <div class=" text-center">
                  <div class=" mb-3 ">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/createEvent.js"></script>