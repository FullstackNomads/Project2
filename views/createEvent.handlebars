<div class="row">

  <div class="col-auto">
    <h2>Create your profile, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">

    <form>
      <div class="mb-3">
        <label for="event-name" class="form-label">Name of Experience</label>
        <input class="form-control" id="event-name">
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input class="form-control" id="location">
      </div>
      <div class="mb-3">
        <label for="date" class="form-label">Date</label>
        <input type="number" class="form-control" min="18" max="100" id="age">
      </div>
     <div class="mb-3">
        <label for="point-of-interest" class="form-label">Point of Interest</label>
        <input class="form-control" id="point-of-interest">
      </div>

      <div class="mb-3">
        <label class="form-label">Interest</label>
        
      
      <div class="input-group mb-3">
        <span class="input-group-text">Description</span>
        <textarea class="form-control"></textarea>
      </div>

  
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    
</div>

<script src="./js/profile.js"></script>
