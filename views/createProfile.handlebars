<div class="row">

  <div class="col-auto">
    <h2>Create your profile, {{first_name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">

    <form class="signup-form">
      <div class="form-group">
        <label for="name-signup">First Name:</label>
        <input class="form-input" type="text" id="firstName-signup" />
      </div>
      <div class="form-group">
        <label for="name-signup">Last Name:</label>
        <input class="form-input" type="text" id="lastName-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="mb-3">
        <label for="age" class="form-label">Age</label>
        <input type="number" class="form-control" min="18" max="100" id="age">
      </div>
      <div class="mb-3">
        <label for="gender" class="form-label">Gender</label>
        <select class="form-select" id="gender">
          <option value="male">Male</option>
          <option value="female">Female</option>
          <option value="other">Other</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <select class="form-select" id="country">
          <option value="usa">USA</option>
          <option value="other">Other</option>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">Interest</label>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="Sports" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault"> Sports </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="Adventure" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault"> Adventure </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="Wellness" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault"> Wellness </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="Nightlife" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault"> Nightlife </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="Food" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault"> Food </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="Food" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault"> Arts and Museums </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="History" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault"> History </label>
        </div>
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text">Bio</span>
        <textarea class="form-control" id="bio"></textarea>
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text">city</span>
        <textarea class="form-control" id="city"></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>



  </div>

  <script src="./js/profile.js"></script>